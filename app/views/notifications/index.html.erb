<div class="row">
  <%= render 'layouts/sidebar' %>
  <div class="span9 span-fixed-sidebar">
    <h1><%= t('application.notifications.title') %></h1>
    <table class="table table-bordered table-condensed">
      <thead>
        <tr>
          <th><%= t('application.notifications.table.name') %></th>
          <th><%= t('application.notifications.table.updated') %></th>
          <th><%= t('application.notifications.table.status') %></th>
        </tr>
      </thead>
      <tbody>
        <% @notifications.each do |notification| %>
        <tr>
        <% @user = User.find(notification.user_id) %>
        <td ><%= @user.name %></td>
        <td><%= distance_of_time_in_words(notification.updatetime,Time.now) %></td>
        <% case notification.human_state_name %>
        <% when "initialized" %>
        <td><%= t('application.notifications.init') %></td>
        <% when "email sent"%>
        <td><%= t('application.notifications.sent') %></td>
        <% when "email read"%>
        <td><%= t('application.notifications.read') %></td>
        <% when "app installed"%>
        <td><%= t('application.notifications.installed') %></td>
        <% else %>
        <td></td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
