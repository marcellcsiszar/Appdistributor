<%= simple_form_for @organization,:html => {:multipart => true}  do |f| %>
    <% if f.error_notification %>
        <div class="alert alert-error fade in">
          <a class="close" data-dismiss="alert" href="#">&times;</a>
          <%= f.error_notification %>
          <% @organization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
          <% end %>
        </div>
    <% end %>

  <form class="well span8">
    <div class="row">
      <div class="span3">
        <label><%= t('application.organizations.form.label_name') %></label>
    <%= f.text_field :name %>
    <%= f.association :customers, :collection => Customer.all, value_method: :_id, include_blank: false %>
    <%= f.association :users, :collection => User.all, value_method: :_id, include_blank: false %>
      <div class="actions">
    <%= f.button :submit %>
    </div>
      </div>
  </form>

<% end %>
