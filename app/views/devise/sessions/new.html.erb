<div class="container login">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="center span4 well text-center">
  <legend><%= t('application.devise.sessions.new.title') %></legend>
  <%= f.email_field :email, :autofocus => true, :placeholder => t('application.devise.sessions.new.placeh_mail') %>
  <%= f.password_field :password, :placeholder => t('application.devise.sessions.new.placeh_pass') %>	<br />

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label t('application.devise.sessions.new.remember') %>
  <% end -%>

  <%= f.submit t('application.devise.sessions.new.title'), :class => "btn btn-success" %>

  <br />

<% end %>

  <br />
  <%= render "devise/shared/links" %>

</div>
</div>
