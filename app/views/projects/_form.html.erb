<%= simple_form_for @project do |f| %>

  <%= render 'layouts/notifier', :error => @project, :form => f %>

  <div class="inputs">
  	<label><%= t('application.projects.form.label_name') %></label>
    <%= f.text_field :name %>

    <%= f.association :customers, :collection => @organization.customers, value_method: :_id, include_blank: false %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
