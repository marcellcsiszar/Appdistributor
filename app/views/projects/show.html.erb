<div class="">
<h3><%= link_to 'Upload Build', new_project_build_path(@project._id), :class => 'btn btn-success' %> <%= link_to 'Edit project details', edit_project_path(@project), :class => 'btn btn-inverse' %> <%= link_to 'Back to projects', projects_path, :class => 'btn btn-info' %></h3>
</div>

<div class="well well-small">
<table class="table table-striped table-condensed table-hover" id="buildlist">
    <thead>
      <tr>
          <th>Icon</th>
          <th>Name of package</th>
          <th>Bundle ID</th>
          <th>Version</th>
          <th>Build time</th>
          <th>Platform</th>
          <th>Download path</th>
          <th></th>
      </tr>
  </thead>
  <tbody>
    <% @builds.each do |build| %>
    <tr>
        <td><img alt="" class="clearfix img-circle" src="http://placehold.it/40x40"></td>
        <td><%= build.packagename %></td>
        <td><%= build.bundleID %></td>
        <td><%= build.version %></td>
        <td><%= build.taken %></td>
        <td><%= build.platform %><span class="label label-success">Android</span>
        <td><%= build.package.url if build.package %></td>
        <td><button class="btn"><i class="icon-download"></i></button></td>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>