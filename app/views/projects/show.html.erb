<h1><%= @project.name %></h1>
<h2><%= link_to t('application.projects.show.new_app_ios'),new_project_ipaapp_path(:project_id => @project.id),:class=> 'btn btn-inverse'%> <%= link_to t('application.projects.show.new_app_apk'),new_project_apkapp_path(:project_id => @project.id), :class => 'btn btn-success' %></h2>
<% if @project.ipaapps.count >0 then %>
<table class="table table-bordered table-striped">
  <thead>
    <blockquote>
      <h3 class="muted"><%= t('application.projects.index.th_ipa') %></h2>
    </blockquote>
    <tr>
      <th><%= t('application.projects.index.th_app') %></th>
      <th><%= t('application.projects.index.th_last_up') %></th>
      <th><%= t('application.projects.index.th_last_build') %></th>
      <th><%= t('application.projects.index.th_commands') %></th>
    </tr>
  </thead>

  <tbody>
    <% @project.ipaapps.each do |ipa_app| %>
      <tr>
        <% if ipa_app.ipabuilds.count>0 %>
        <td>
          <%= image_tag(ipa_app.ipabuilds.last.icon.thumb('40x40').url, :class => "clearfix img-polaroid") %>
          <blockquote class="inline-table">
            <p>
              <%= link_to ipa_app.name, project_ipaapp_path(:project_id =>@project._id, :id => ipa_app._id) %>
            </p>
            <%= ipa_app.bundleID %>
          </blockquote>
        </td>
        <td class="cell-buttons"><%= ipa_app.ipabuilds.last.taken %></td>
        <td class="cell-buttons"><%= ipa_app.ipabuilds.last.version %></td>
        <% elsif %>
        <td>
          <blockquote class="inline-table">
            <p>
              <%= link_to ipa_app.name, project_ipaapp_path(:project_id =>@project._id, :id => ipa_app._id) %>
            </p>
            <%= ipa_app.bundleID %>
          </blockquote>
        </td>
        <td class="cell-buttons"></td>
        <td class="cell-buttons"></td>
        <% end %>
        <td class="cell-buttons"><%= link_to t('application.ipaapps.index.edit'), edit_project_ipaapp_path(:project_id => @project.id,:id => ipa_app._id), :class => 'btn btn-inverse' %> <%= link_to "Delete", project_ipaapp_path(:project_id => @project.id,:id => ipa_app._id),:method => :delete, data: { confirm: t('application.projects.index.sure') }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% if @project.apkapps.count >0 then %>
<table class="table table-bordered table-striped">
  <thead>
    <blockquote>
      <h3 class="text-success"><%= t('application.projects.index.th_apk') %></h2>
    </blockquote>
    <tr>
      <th><%= t('application.projects.index.th_app') %></th>
      <th><%= t('application.projects.index.th_last_up') %></th>
      <th><%= t('application.projects.index.th_last_build') %></th>
      <th><%= t('application.projects.index.th_commands') %></th>
    </tr>
  </thead>
  <tbody>
    <% @project.apkapps.each do |apk_app| %>
      <tr>
        <% if apk_app.apkbuilds.count>0 %>
        <td>
          <%= image_tag(apk_app.apkbuilds.last.icon.thumb('40x40').url, :class => "clearfix img-polaroid") %>
          <blockquote class="inline-table">
            <p>
              <%= link_to apk_app.name, project_apkapp_path(:project_id =>@project._id, :id => apk_app._id) %>
            </p>
            <%= apk_app.bundleID %>
          </blockquote>
        </td>
        <td class="cell-buttons"><%= apk_app.apkbuilds.last.taken %></td>
        <td class="cell-buttons"><%= apk_app.apkbuilds.last.version %></td>
        <% elsif %>
        <td>
          <blockquote class="inline-table">
            <p>
              <%= link_to apk_app.name, project_apkapp_path(:project_id =>@project._id, :id => apk_app._id) %>
            </p>
            <%= apk_app.bundleID %>
          </blockquote>
        </td>
        <td class="cell-buttons"></td>
        <td class="cell-buttons"></td>
        <% end %>
        <td class="cell-buttons"><%= link_to t('application.apkapps.index.edit'), edit_project_apkapp_path(:project_id => @project.id,:id => apk_app._id), :class => 'btn btn-inverse' %> <%= link_to "Delete", project_apkapp_path(:project_id => @project.id,:id => apk_app._id),:method => :delete, data: { confirm: t('application.projects.index.sure') }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>