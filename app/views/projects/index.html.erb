<h1>Listing projects</h1>

<h2><%= link_to 'New Project', new_project_path, :class => 'btn btn-info icon' %></h2>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Customer</th>
      <th>Commands</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to project.customer.name, project.customer if project.customer? %></td>
        <td><%= link_to 'List of builds', project_path(project._id), :class => 'btn btn-info' %> <%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-inverse' %> <%= link_to "Delete", project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>