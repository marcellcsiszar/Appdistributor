<%= link_to image_tag("jbs-logo.png", :alt => "Distror"), root_path, :class => 'brand' %>
<ul class="nav pull-right">
  <% if signed_in? %>
      <% if uploader_signed_in? %>
        <li>
          <%= link_to('Edit account', "/uploaders/edit") %>
        </li>
        <li>
          <%= link_to('Logout', destroy_uploader_session_path, :method=>'delete') %>
        </li>
      <% elsif admin_signed_in? %>
        <li>
          <%= link_to('Edit account', "/admins/edit") %>
        </li>
        <li>
          <%= link_to('Logout', destroy_admin_session_path, :method=>'delete') %>
        </li>
      <% else %>
        <li>
          <%= link_to('Edit account', "/users/edit") %>
        </li>
        <li>
        <%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>
        </li>
      <% end %>
  <% else %>
    <li>
    <%= link_to('Sign up', new_user_registration_path)  %>
    </li>
    <li>
    <%= link_to('Login', new_user_session_path)  %>
    </li>
  <% end %>
</ul>